{
  "description": "Empirica project-local Claude Code settings",
  "hooks": {
    "PreCompact": [
      {
        "description": "Save epistemic snapshot before auto-compact",
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/plugins/claude-code-integration/hooks/pre-compact.py",
            "timeout": 30
          }
        ]
      },
      {
        "description": "Save epistemic snapshot before manual /compact",
        "matcher": "manual",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/plugins/claude-code-integration/hooks/pre-compact.py",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "description": "Load epistemic context + run drift detection after compaction",
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/plugins/claude-code-integration/hooks/post-compact.py",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
